<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="pl.edu.uam.rest.marsey.model.Candidate" table="CANDIDATE">
        <meta attribute="class-description">
            This class contains the candidate detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="first_name" type="string"/>
        <property name="surname" column="last_name" type="string"/>
        <property name="age" column="age" type="int"/>
        <property name="height" column="height" type="int"/>
        <property name="occupation" column="occupation" type="string"/>
        <property name="sex" column="sex" type="string"/>
    </class>
</hibernate-mapping>
